<form id='control-bar-form'>
	<button name='pause-resume' title='pause / play [spacebar]'>
		<i class='fas fa-pause'></i>
	</button>
	
	<button name='step' title='step forward [right arrow]'>
		<i class='fas fa-step-forward'></i>
	</button>
	
	<button name='speed-normal' title='play [1]'>
		<i class='fas fa-play'></i>
	</button>
	
	<button name='speed-fast' title='fast forward [2]'>
		<i class='fas fa-forward'></i>
	</button>
	
	<button name='speed-turbo' title='turbo / play [3]'>
		<i class='fas fa-bolt'></i>
	</button>
	
	<input name='elapsed-sim-time' title='D:HH:mm:ss.SSS' size='16' readonly tabindex='-1'>
	
	<button name='info' title='show info [escape]'>
		<i class='fas fa-info'></i>
	</button>
</form>
